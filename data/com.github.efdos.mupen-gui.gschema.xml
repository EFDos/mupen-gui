<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="com.github.efdos.mupen-gui.display" path="/com/github/efdos/mupen-gui/display/"
    gettext-domain="mupen-gui">

    <key name="fullscreen" type="b">
      <default>false</default>
      <summary>Run Mupen64 in Fullscreen.</summary>
      <description>Run Mupen64 in Fullscreen.</description>
    </key>

  </schema>

  <schema id="com.github.efdos.mupen-gui.input" path="/com/github/efdos/mupen-gui/input/"
    gettext-domain="mupen-gui">

    <key name="input-device" type="s">
      <default>"Keyboard"</default>
      <summary>Primary device for input.</summary>
      <description>Defines the input device (keyboard, joypad etc...).</description>
    </key>

  </schema>

  <schema id="com.github.efdos.mupen-gui.ui" path="/com/github/efdos/mupen-gui/ui/" gettext-domain="mupen-gui">
    <key name="rom-dir" type="s">
      <default>""</default>
      <summary>Saved rom directory</summary>
      <description>Saved rom directory to be automatically opened.</description>
    </key>
  </schema>

</schemalist>
